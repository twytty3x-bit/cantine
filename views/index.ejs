<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cantine - POS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css?v=<%= new Date().getTime() %>">
    <link rel="stylesheet" href="/css/pos.css?v=<%= new Date().getTime() %>">
</head>
<body>
    <div class="pos-container">
        <div class="pos-header">
            <!-- Header vide, les boutons sont maintenant en bas -->
        </div>

        <!-- Section gauche : Produits -->
        <div class="products-section">
            <div class="categories-bar">
                <button class="category-btn active" data-category="all">Tous</button>
                <!-- Les catégories seront ajoutées dynamiquement -->
                <button class="ticket-sale-btn" onclick="openTicketSaleModal()">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Moitié-Moitié</span>
                </button>
            </div>
            <div class="products-grid" id="products-container">
                <!-- Les produits seront ajoutés dynamiquement -->
            </div>
        </div>

        <!-- Section droite : Panier -->
        <div class="cart-section">
            <div class="cart-header">
                <h2>Panier actuel</h2>
                <button id="clear-cart" class="clear-btn">
                    <i class="fas fa-trash"></i> Vider
                </button>
            </div>
            
            <!-- Zone des produits -->
            <div class="cart-items" id="cart-items">
                <!-- Les articles du panier seront ajoutés ici -->
            </div>
            
            <!-- Pied du panier -->
            <div class="cart-footer">
                <div class="amount-due">
                    <span>Sous-total:</span>
                    <span id="subtotal">0.00$</span>
                </div>
                
                <!-- Nouvelle section coupons -->
                <div class="coupons-section">
                    <div class="coupons-header">
                        <i class="fas fa-ticket-alt"></i>
                        <h3>Coupons disponibles</h3>
                    </div>
                    <div id="coupon-info" class="coupon-info"></div>
                    <div class="discount-amount" id="discount-amount" style="display: none;">
                        <span>Réduction:</span>
                        <span id="discount">0.00$</span>
                    </div>
                    <div class="available-coupons" id="available-coupons">
                        <!-- Les coupons seront ajoutés ici dynamiquement -->
                    </div>
                </div>

                <div class="total-amount">
                    <span>Total à payer:</span>
                    <span id="total">0.00$</span>
                </div>
                
                <div class="payment-input">
                    <label for="amount-received">Montant reçu:</label>
                    <input type="number" id="amount-received" step="0.01">
                </div>
                <div class="change-due">
                    <span>Monnaie à rendre:</span>
                    <span id="change-amount">0.00$</span>
                </div>
                <button id="complete-sale" class="complete-btn" disabled>
                    Compléter la vente
                </button>
            </div>
        </div>
    </div>

    <!-- Modal pour la vente de coupons -->
    <div id="ticket-sale-modal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close" onclick="closeTicketSaleModal()">&times;</span>
            <h2><i class="fas fa-ticket-alt"></i> Moitié-Moitié</h2>
            <form id="ticket-sale-form">
                <div class="form-group">
                    <label for="ticket-email">
                        <i class="fas fa-envelope"></i>
                        Adresse email du client
                    </label>
                    <input type="email" id="ticket-email" required placeholder="client@email.com">
                </div>
                <div class="form-group">
                    <label>
                        <i class="fas fa-tags"></i>
                        Sélectionner une offre
                    </label>
                    <div id="offers-selection" class="offers-selection">
                        <!-- Les offres seront ajoutées ici dynamiquement -->
                    </div>
                    <input type="hidden" id="ticket-quantity" required>
                    <input type="hidden" id="ticket-price" required>
                    <div id="ticket-offer-info" class="ticket-offer-info" style="display: none;"></div>
                </div>
                <div class="ticket-total-display">
                    <span>Total:</span>
                    <span id="ticket-total">0.00$</span>
                </div>
                <div class="form-buttons">
                    <button type="submit" class="btn-primary" id="add-tickets-btn" disabled>
                        <i class="fas fa-shopping-cart"></i>
                        Ajouter au panier
                    </button>
                    <button type="button" class="btn-secondary" onclick="closeTicketSaleModal()">
                        Annuler
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/pos.js?v=<%= new Date().getTime() %>"></script>
</body>
</html> 